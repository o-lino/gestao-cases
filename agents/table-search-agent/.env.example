# Agent Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Vector Database - ChromaDB
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=table_catalog

# Vector Database - PostgreSQL with pgvector
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=table_search
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# API Settings
API_HOST=0.0.0.0
API_PORT=8001
API_DEBUG=true

# Scoring Weights (deterministic)
WEIGHT_SEMANTIC=0.35
WEIGHT_HISTORICAL=0.30
WEIGHT_KEYWORD=0.15
WEIGHT_DOMAIN=0.10
WEIGHT_FRESHNESS=0.05
WEIGHT_OWNER_TRUST=0.05

# Decision Thresholds
AUTO_SELECT_THRESHOLD=0.90
SUGGEST_THRESHOLD=0.70
MIN_MATCH_SCORE=0.30

# Memory Settings
SEMANTIC_CACHE_TTL_HOURS=24
HISTORY_LOOKBACK_DAYS=90
MIN_DECISIONS_FOR_PATTERN=3

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# gestao-cases-2.0 Integration
GESTAO_CASES_API_URL=http://localhost:8000
